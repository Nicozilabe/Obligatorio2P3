@using CasosDeUso.DTOs.Usuarios;
@model RegistroEmpleadoDTO;

@{
    ViewData["Title"] = "Registro";
}

<h1>Registro</h1>

<h4>RegistroEmpleadoDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" required maxlength="32" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" required maxlength="32" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" required maxlength="32" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <select  name="Rol">
                    <option value="Administrador">Administrador</option>
                    <option value="Empleado">Empleado</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label"></label>
                <input asp-for="Pass" required maxlength="32" class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
                <input type="hidden" name="IdRealizador" value="@ViewBag.IdAdmin" class="form-control" />
                         
            <div class="form-group pt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <h2>
                @ViewBag.ErrorMessage
            </h2>
        </form>
    </div>
</div>

<div>
    <a asp-action="Empleados">Volver a Empleados </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
