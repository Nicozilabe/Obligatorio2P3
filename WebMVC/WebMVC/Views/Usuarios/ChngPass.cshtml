@model WebMVC.DTOs.Usuarios.CambioContrasenaDTO
@{
    ViewData["Title"] = "ChngPass";
}

<h1>Camviar contraseña</h1>
<hr />
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChngPass" method="post" onsubmit="return validarPasswords()">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <input type="hidden" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Contraseña actual</label>
                <input type="password" name="passVieja" id="passVieja" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Nueva contraseña</label>
                <input type="password" name="passNueva" id="passNueva" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Repetir nueva contraseña</label>
                <input type="password" name="passNuevaConfirmacion" id="passNuevaConfirmacion" class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        function validarPasswords() {
            var nueva = document.getElementById("passNueva").value;
            var repetir = document.getElementById("passNuevaConfirmacion").value;
            if (nueva !== repetir) {
                alert("Las contraseñas no coinciden.");
                return false;
            }
            return true;
        }
    </script>
}
<div>
	<a asp-controller="Home" asp-action="Index">Vovler al inicio</a>
</div>