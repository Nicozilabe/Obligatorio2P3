@{
    ViewData["Title"] = "Seguimiento de Envio";
}

<h2>Seguimiento de Envío</h2>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
<form asp-action="Seguimiento" method="post">
    <div class="form-group">
        <label for="tracking">Número de Tracking</label>
        <input type="number" id="tracking" name="tracking" class="form-control" min="1" required/>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>